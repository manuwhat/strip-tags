{
    "name": "salimk/strip-tags",
    "type": "library",
    "description": "remove PHP and HTML Tags from a string in a custom and efficient  way",
    "keywords": [
	    "strip-tags",
        "html",
		"php",
		"clean",
		"string"
    ],
    "homepage": "https://github.com/salimk/strip-tags",
    "license": "MIT",
    "authors": [
        {
            "name": "Akpé Aurelle Emmanuel Moïse Zinsou, Salim KHALIL",
            "email": "leizmo@gmail.com,khalilsalim1@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0"
    },
	
    "require-dev": {
        "phpunit/phpunit": "^6.5.0",
        "friendsofphp/php-cs-fixer": "^2.15"
    },

    "autoload": {
        "psr-4": {
            "EZAMA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EZAMA\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check-style": "vendor/bin/php-cs-fixer fix --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.cs.php",
        "fix-style": "vendor/bin/php-cs-fixer fix --config=.cs.php",
        "test": "vendor/bin/phpunit",
        "check-all": [
            "@check-style",
            "@test"
        ]
    },
    "extra": {
    "branch-alias": {
      "dev-master": "v1.0.2"
    }
  },
    "minimum-stability": "dev"
}
